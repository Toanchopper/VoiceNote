<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#01c5c4"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="Thêm ghi chú"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:text="Ấn vào micro để đọc tiêu đề và nội dung"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edttitle"
            android:hint="Tiêu đề"
            android:paddingLeft="10dp"
            android:background="@drawable/item_shape"
            android:layout_width="250dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/btnvoice1"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/voice"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtcontent"
            android:hint="Nội dung"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:gravity="top|left"
            android:background="@drawable/item_shape"
            android:layout_width="250dp"
            android:layout_height="200dp"/>
        <ImageView
            android:id="@+id/btnvoice2"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/voice"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnok"
            android:text="Thêm"
            android:textColor="#000"
            android:background="@drawable/okshape"
            android:layout_width="120dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btncancel"
            android:text="Hủy"
            android:textColor="#fff"
            android:background="@drawable/canshape"
            android:layout_width="120dp"
            android:layout_marginLeft="60dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvlang"
            android:text="Ngôn ngữ: Tiếng Anh"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="55dp"
            android:layout_width="200dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/btnlang"
            android:src="@drawable/translate"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </LinearLayout>
</LinearLayout>